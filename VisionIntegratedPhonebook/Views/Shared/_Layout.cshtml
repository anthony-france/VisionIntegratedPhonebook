<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Vision Integrated Directory</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- @Html.ActionLink("Vision Integrated Directory", "Index", "Home", null, new { @class = "navbar-brand" }) -->
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("All", "Index", "Home")</li>
                    <li>@Html.ActionLink("Chicago", "Chicago", "Facility")</li>
                    <li>@Html.ActionLink("Tinley Park", "Tinley", "Facility")</li>
                    <li>@Html.ActionLink("Hobart", "Hobart", "Facility")</li>
                    <li>@Html.ActionLink("Departments", "Index", "Department")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="navbar-text hidden">Hello, @User.Identity.Name!</li>
                    <li>@Html.ActionLink("Help", "Index", "Help")</li>
                </ul> 
            </div>
        </div>
    </div>
    <div class="container body-content page-@ViewBag.PageClass">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Vision Integrated Directory</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
